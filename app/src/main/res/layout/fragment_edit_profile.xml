<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditProfileFragment">

    <TextView
        android:id="@+id/txtVEditProfileTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Type only the values you wish to change."
        android:layout_alignParentStart="true"/>
    <EditText
        android:id="@+id/txtEditProfilePassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="New Password"
        android:inputType="textPassword"
        android:layout_below="@+id/txtVEditProfileTitle"/>

    <EditText
        android:id="@+id/txtEditProfileRetypePassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:hint="Retype New Password"
        android:inputType="textPassword"
        android:layout_below="@id/txtEditProfilePassword"/>

    <EditText
        android:id="@+id/txtEditProfileEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="New Email"
        android:inputType="textEmailAddress"
        android:layout_below="@+id/txtEditProfileRetypePassword"/>

    <EditText
        android:id="@+id/txtEditProfilePhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="New Phone Number"
        android:inputType="phone"
        android:layout_below="@+id/txtEditProfileEmail"/>

    <Button
        android:id="@+id/btnSignMeUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Profile"
        android:textAlignment="center"
        android:layout_alignParentBottom="true" />

</RelativeLayout>